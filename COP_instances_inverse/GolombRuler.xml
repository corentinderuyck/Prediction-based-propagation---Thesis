<!-- This instance size is reduced thanks to AI tools -->
<instance format="XCSP3" type="COP">
  <variables>
    <array id="x" size="[4]"> 0..20 </array>
    <array id="y" size="[4][4]"> 1..20 </array>
  </variables>
  <constraints>
    <!-- Contraintes AllDifferent sur les distances -->
    <allDifferent> y[0][1..3] y[1][2..3] y[2][3] </allDifferent>

    <!-- Liaison x[i] + y[i][j] = x[j] -->
    <group note="Linking x and y">
      <intension> eq(%0,add(%1,%2)) </intension>
      <args> x[1] x[0] y[0][1] </args>
      <args> x[2] x[0] y[0][2] </args>
      <args> x[2] x[1] y[1][2] </args>
      <args> x[3] x[0] y[0][3] </args>
      <args> x[3] x[1] y[1][3] </args>
      <args> x[3] x[2] y[2][3] </args>
    </group>
  </constraints>
  <objectives>
    <maximize> x[3] </maximize>
  </objectives>
</instance>
