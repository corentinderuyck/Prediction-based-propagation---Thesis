<instance format="XCSP3" type="COP">
  <variables>
    <array id="x" note="x[o,p] is the value of A(o,p)" size="[4][4]"> 0..30 </array>
  </variables>
  <constraints>
    <intension note="imposing a non-null root"> ne(x[0][0],0) </intension>
    <allDifferent note="imposing different values"> x[0..1][0] x[1][1] x[2][0..2] x[3][0..3] </allDifferent>
    <group note="computing triangle sums">
      <intension> eq(%0,add(%1,%2)) </intension>
      <args> x[0..1][0] x[1][1] </args>
      <args> x[1..2][0] x[2][1] </args>
      <args> x[1..2][1] x[2][2] </args>
      <args> x[2..3][0] x[3][1] </args>
      <args> x[2..3][1] x[3][2] </args>
      <args> x[2..3][2] x[3][3] </args>
    </group>
  </constraints>
  <objectives>
    <minimize note="minimizing the root value of the triangle"> x[0][0] </minimize>
  </objectives>
</instance>
